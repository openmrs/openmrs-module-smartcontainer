<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.openmrs.module.smartcontainer">
    <class name="SmartUser" table="smartcontainer_user">
        <id name="sMARTAppUserId" type="java.lang.Integer" column="smartcontainer_user_id"
            unsaved-value="0">
            <generator class="native"/>
        </id>
        <set name="hiddenApps" table="smartcontainer_user_hidden_app" lazy="false"
             cascade="all">
            <key>
                <column name="smartcontainer_user_id"/>
            </key>
            <many-to-many class="org.openmrs.module.smartcontainer.app.App">
                <column name="smartcontainer_app_id"/>
            </many-to-many>
        </set>
        <many-to-one name="openMRSUser" class="org.openmrs.User"
                     column="user_id" not-null="true" cascade="all" unique="true"/>
    </class>
</hibernate-mapping>
