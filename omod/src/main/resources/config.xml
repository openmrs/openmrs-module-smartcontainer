<?xml version="1.0" encoding="UTF-8"?>
<module configVersion="1.2">

	<!-- Base Module Properties -->
	<id>smartcontainer</id>
	<name>SMART Container</name>
	<version>0.1</version>
	<package>org.openmrs.module.@MODULE_ID@</package>
	<author>Balachandiran Ajanthan</author>
	<description>Provides API and space for this instace to be a SMART Apps container</description>

	<activator>@MODULE_PACKAGE@.SmartContainerActivator</activator>

	<updateURL>http://modules.openmrs.org/modules/download/@MODULE_ID@/update.rdf</updateURL>
	<!-- /Base Module Properties -->

	<require_version>1.7.0</require_version>

	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>@MODULE_PACKAGE@.extension.html.AdminList</class>
	</extension>
	<extension>
		<point>org.openmrs.patientDashboardTab</point>
		<class>@MODULE_PACKAGE@.extension.html.SmartAppTab</class>
	</extension>
	<!--
	<extension> 
	<point>org.openmrs.userOptionExtension</point>
	<class>@MODULE_PACKAGE@.extension.html.UserOptionTabExtension</class> 
	</extension>-->


	<!-- Required Privileges -->
	<privilege>
		<name>Manage SMART Apps</name>
		<description>Allows user to install/uninstall SMART apps</description>
	</privilege>


	<!-- Required Global Properties <globalProperty> <property>@MODULE_ID@.someProperty</property> 
		<defaultValue></defaultValue> <description> A description of the global property 
		goes here. The description should explain enough for administrators to understand 
		the purpose and possible values for the global property. </description> </globalProperty> 
		/Required Global Properties -->

	<!-- Internationalization -->
	<!-- All message codes should start with @MODULE_ID@.* -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->
	
	<mappingFiles>
		App.hbm.xml
		Activity.hbm.xml
		WebHook.hbm.xml
        SmartUser.hbm.xml
	</mappingFiles>
</module>
